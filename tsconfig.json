{
  "include": [
    "./src/**/*"
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2017"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/global.d.ts"
    ],
    "resolveJsonModule": true,
    "allowJs": true,
    // "checkJs": true,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "rootDirs": ["src"],

    "paths": {
      "@components/*": [
        "components/*"
      ],
      "@et/types/*": [
        "types/*"
      ],
      "@redux/*": [
        "state/*"
      ],
      "@svg": [
        "assets/svg"
      ],
      "@utils/*": [
        "utils/*"
      ]
    }
  },
  "exclude": [
    "build",
    "dist",
    "scripts",
    "node_modules",
    "public",
    "next.config.js",
    "next-seo.config.js",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
  ]
}