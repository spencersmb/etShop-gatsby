{
  "include": [
    "./src/**/*"
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2017"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": "src",
    "rootDirs": [
      "src"
    ],
    "resolveJsonModule": true,
    "allowJs": true,
    // "checkJs": true,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "exclude": [
    "build",
    "dist",
    "scripts",
    "node_modules",
    "public",
    "next.config.js",
    "next-seo.config.js",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx"
  ]
}